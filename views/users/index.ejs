<!DOCTYPE html>
<html>
  <head>
    <script src="https://code.jquery.com/jquery-2.1.4.js"></script>
    <script src="./javascripts/usersViews.js"></script>
    <meta charset="utf-8">
    <title><%= title %></title>
  </head>
  <body>
    <div>
      <h1>Users</h1>

      <ul>
          <% for(var i = 0; i<users.length; i++) { %>
            <li><%= users[i].name %> -- (<%= users[i].email %>) --
              <a href="/users/<%= users[i].id %>">view</a>
              <a href="/users/<%= users[i].id %>/edit">edit</a>
              <form class="deleteForm" action="/users/<%=users[i].id %>" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="deleteButton">delete</button>
              </form>

            <% } %>
      </ul>
    </div>

    <div>
      <a href="/users/new">Add a new user</a>
    </div>
  </body>
</html>
